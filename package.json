{
    "name": "@hashgraph/vc-sdk-js",
    "version": "1.0.0",
    "engines": {
        "npm": ">=8.1.2",
        "node": ">=16.13.1"
    },
    "description": "Support for the Hedera Hashgraph DID Method on the Hedera JavaScript/TypeScript SDK",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "files": [
        "dist/**/*"
    ],
    "types": "dist/index.d.ts",
    "scripts": {
        "prepare": "npm run build",
        "prepublish": "npm run build",
        "build": "tsc",
        "build:dev": "tsc --sourceMap -w",
        "start": "node dist/index.js",
        "start:dev": "nodemon --inspect dist/index.js",
        "test": "tsc && npm run test-node",
        "test-node": "cross-env NODE_ENV=test mocha -r esm --preserve-symlinks -t 30000 -A -R ${REPORTER:-spec} --require test/test-mocha.js test/**/*.spec.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hashgraph/vc-sdk-js.git"
    },
    "author": "Hedera Hashgraph, LLC",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/hashgraph/vc-sdk-js/issues"
    },
    "homepage": "https://github.com/hashgraph/vc-sdk-js#readme",
    "devDependencies": {
        "@types/node": "^16.7.7",
        "@types/uuid": "^8.3.4",
        "nodemon": "^2.0.7",
        "prettier": "2.5.1",
        "typescript": "^4.3.2",
        "mocha": "^8.4.0",
        "mocha-lcov-reporter": "^1.3.0",
        "chai": "^4.2.0",
        "cross-env": "^5.2.0",
        "eslint": "^7.26.0",
        "nyc": "^15.0.0"
    },
    "dependencies": {
        "@hashgraph/did-sdk-js": "github:Meeco/did-sdk-js#ff914da5377fc69d8d9d292232a1aba04f1ba74c",
        "@hashgraph/sdk": "^2.8",
        "bs58": "^5.0.0",
        "did-jwt": "^5.12.4",
        "did-jwt-vc": "^2.1.9",
        "did-resolver": "^3.1.5",
        "js-base64": "^3.6.1",
        "moment": "^2.29.1",
        "multiformats": "^9.6.2",
        "sha.js": "^2.4.11",
        "varint": "^6.0.0",
        "vc-revocation-list": "^3.0.0"
    },
    "nyc": {
        "exclude": [
            "test"
        ]
    }
}
